{
  "name": "design-system-11ty-starter",
  "version": "1.0.0",
  "description": "Starter template for creating an 11ty (eleventy) project with the U-M Library Design System",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass --no-source-map --watch src/sass:public/css",
    "build:sass": "sass src/sass:public/css",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "eleventy",
    "start": "npm-run-all --parallel watch:eleventy watch:sass",
    "build": "npm-run-all build:sass build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlibrary/design-system-11ty-starter.git"
  },
  "keywords": [],
  "author": "UM Library Design System",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mlibrary/design-system-11ty-starter/issues"
  },
  "homepage": "https://github.com/mlibrary/design-system-11ty-starter#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.6"
  }
}
